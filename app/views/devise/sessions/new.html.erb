<div class="row">

    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-lock"></span> Sign In</div>
            <div class="panel-body">


				<%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-horizontal") do |f| %>

					<div class="form-group margin_bottom">
						<%= f.label :email %><br />
						<%= f.email_field :email, autofocus: true, class:"col-sm-12" %>
					</div>

					<div class="form-group margin_top">
						<%= f.label :password %><br />
						<%= f.password_field :password, autocomplete: "off", class:"col-sm-12" %>
					</div>

					<% if devise_mapping.rememberable? -%>
						<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
					<% end -%>

					<div><%= f.submit "Sign in", class:"btn btn-success btn-sm margin_top margin_bottom" %></div>
				<% end %>

            </div>
            <div class="panel-footer"><%= render "devise/shared/links" %></div>
        </div>
    </div>
</div>
