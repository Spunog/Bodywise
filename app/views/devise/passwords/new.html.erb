<div class="row">

    <div class="col-md-offset-4 col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-lock"></span> Forgot your password?</div>
            <div class="panel-body">


				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

					<div class="alert alert-danger">
						<%= devise_error_messages! %>
					</div>

					<div><%= f.label :email %><br />
						<%= f.email_field :email, autofocus: true, class:"margin_top col-xs-offset-1 col-xs-9" %>
					</div>

					<div><%= f.submit "Send me reset password instructions", class:"btn btn-primary margin_top margin_bottom col-xs-offset-1 col-xs-9" %></div>
				<% end %>

            </div>
            <div class="panel-footer"><%= render "devise/shared/links" %></div>
        </div>
    </div>
</div>

